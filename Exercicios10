import java.util.Scanner;

public class Empresa {
	static Scanner scan = new Scanner(System.in);
	static Funcionario func[];

	public static void main(String[] args) {
		int funcionarios = cadastrA();

		alteraHoras(funcionarios, func);

	}

	static int cadastrA() {
		System.out
				.println("Insira a quantidade de funcionarios que sua empresa tem: ");
		int funcionarios = scan.nextInt();
		func = new Funcionario[funcionarios];
		
		for (int i = 0; i < funcionarios; i++) {
			func[i] = new Funcionario();
			System.out.println("Insira o nome do " + (i + 1)
					+ "ยบ funcionario: ");
			String nome = scan.next();
			func[i].setNome(nome);
			
			System.out.println("Insira a quantidade de horas trabalhadas pelo "
					+ func[i].getNome());
			func[i].setHorasT(scan.nextInt());
			System.out.println("Insira a categoria do " + func[i].getNome()
					+ " (O para operario e G para gerente)");
			func[i].setCategoria(scan.next());
		}
		return funcionarios;

	}

	static void alteraHoras(int funcionarios, Funcionario func[]) {
		for (int i = 0; i < funcionarios; i++) {
			if (func[i] != null)
				System.out.println(func[i].getNome());
		}
		System.out.println("	");

	}

}
